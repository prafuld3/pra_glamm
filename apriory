lst=[]
k=0
for i in range(df1.shape[0]):
    if df1.iloc[i,0]==df1.iloc[i+1,0]:
        if i==df1.shape[0]-2:
            pass
        else:
            continue
        
    for j in range(k,i):
        if df1.iloc[j,1]==df1.iloc[j+1,1]:
            lst.append(list(df1['product_name'][j:j+2].values))
    k=j+2
    if i==df1.shape[0]-2:
        break
